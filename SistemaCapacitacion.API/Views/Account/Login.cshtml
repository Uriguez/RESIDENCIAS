@model SistemaCapacitacion.Core.ViewModels.LoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Login — Griver</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

    <!-- CSS DEL LOGIN -->
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />

    <!-- CSS DEL LOADER (INDEPENDIENTE) -->
    <link rel="stylesheet" href="~/css/login-loader.css" asp-append-version="true" />
</head>
<body class="login-bg">

    <!-- =========================
         LOADER DE LOGIN (APARTE)
    ========================== -->
    <div id="loginLoader" class="login-loader hidden">
        <div class="login-loader-box">
            <div class="login-loader-spinner"></div>
            <div class="login-loader-text">
                Verificando acceso…
            </div>
        </div>
    </div>

    <div class="container py-5">
        <div class="d-flex align-items-center justify-content-center min-vh-100">
            <div class="auth-card card border-0 shadow-xxl">
                <div class="card-body p-4 p-md-5 position-relative">

                    <div class="brand">
                        <img src="/img/logo2.png" alt="Griver" />
                    </div>

                    <h4 class="text-center mb-1 fw-semibold">
                        Bienvenido a <strong>Griver</strong>
                    </h4>
                    <p class="text-center text-muted mb-4">
                        Sistema de Gestión de Capacitación
                    </p>

                    <!-- ALERTA DE ERROR -->
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div id="alertError" class="alert alert-danger rounded-3 py-2 px-3 mb-4" role="alert">
                            <i class="bi bi-exclamation-triangle-fill"></i>
                            <strong> Error:</strong>
                            @Html.ValidationSummary(false)
                        </div>

                        <script>
                            setTimeout(() => {
                                const alertBox = document.getElementById("alertError");
                                if (alertBox) {
                                    alertBox.style.opacity = "0";
                                    alertBox.style.transition = "opacity 0.8s";
                                }
                            }, 4000);
                        </script>
                    }

                    <!-- FORM LOGIN -->
                    <form asp-action="Login"
                          method="post"
                          novalidate
                          onsubmit="showLoginLoader()">

                        @Html.AntiForgeryToken()

                        <!-- EMAIL -->
                        <div class="mb-3">
                            <label class="form-label fw-medium">Correo electrónico</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text">
                                    <i class="bi bi-envelope"></i>
                                </span>
                                <input asp-for="Email"
                                       class="form-control"
                                       type="email"
                                       placeholder="usuario@griver.com"
                                       required />
                            </div>
                        </div>

                        <!-- PASSWORD -->
                        <div class="mb-3">
                            <label class="form-label fw-medium">Contraseña</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text">
                                    <i class="bi bi-lock"></i>
                                </span>
                                <input asp-for="Passwords"
                                       class="form-control"
                                       type="password"
                                       placeholder="Ingresa tu contraseña"
                                       required />
                            </div>
                        </div>

                        <!-- REMEMBER ME -->
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="form-check">
                                <input asp-for="RememberMe"
                                       class="form-check-input"
                                       type="checkbox"
                                       id="remember" />
                                <label class="form-check-label" for="remember">
                                    Recordarme
                                </label>
                            </div>
                        </div>

                        <button class="btn btn-primary w-100 btn-lg" type="submit">
                            Iniciar Sesión
                        </button>

                        <p class="text-center text-muted mt-4 mb-0 small">
                            © 2025 Griver. Todos los derechos reservados.
                        </p>
                    </form>

                </div>
            </div>
        </div>
    </div>

    <!-- JS DEL LOADER (INDEPENDIENTE) -->
    <script src="~/js/login-loader.js" asp-append-version="true"></script>
</body>
</html>
