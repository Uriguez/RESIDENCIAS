<!doctype html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Griver</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/admin-home.css">
</head>
<body class="bg-light">
    <header class="navbar navbar-expand bg-white border-bottom px-3">
        <div class="me-auto fw-semibold">Panel Administrativo Griver</div>
        <div class="d-flex align-items-center gap-3">
            <span class="text-muted small" id="clock"></span>
            <button class="btn btn-sm btn-outline-secondary">🔔</button>
            <div class="dropdown">
                <button class="btn btn-sm btn-outline-primary dropdown-toggle" data-bs-toggle="dropdown">Mi Cuenta</button>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><a class="dropdown-item" asp-controller="Perfil" asp-action="Index">Mi Perfil</a></li>
                    <li><a class="dropdown-item" asp-controller="Configuracion" asp-action="Index">Configuración</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><form asp-controller="Auth" asp-action="Logout" method="post"><button class="dropdown-item text-danger">Cerrar sesión</button></form></li>
                </ul>
            </div>
        </div>
    </header>

    <div class="container-fluid">
        <div class="row">
            <aside class="col-12 col-md-3 col-lg-2 border-end bg-white p-3">
                <nav class="nav flex-column gap-1">
                    <a class="nav-link" asp-controller="Admin" asp-action="Inicio">Inicio</a>
                    <a class="nav-link" asp-controller="Cursos" asp-action="Index">Gestión de Cursos</a>
                    <a class="nav-link" asp-controller="Usuarios" asp-action="Index">Gestión de Usuarios</a>
                    <a class="nav-link" asp-controller="Progreso" asp-action="Index">Progreso de Cursos</a>
                    <a class="nav-link" asp-controller="Soporte" asp-action="Index">Ayuda y Soporte</a>
                </nav>
                <div class="small text-muted mt-4">Griver v2.0.0 · 2025</div>
            </aside>
            <main class="col-12 col-md-9 col-lg-10 py-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const tick=()=>document.getElementById('clock').textContent=new Date().toLocaleTimeString('es-MX');
        tick(); setInterval(tick,1000);
    </script>
    @RenderSection("Scripts", false)
</body>
</html>
