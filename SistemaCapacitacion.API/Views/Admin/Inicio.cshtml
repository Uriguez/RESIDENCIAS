@{
    ViewData["Title"] = "Panel de Control - Administrador";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Stats Cards -->
<div class="stats-grid">
    <div class="stat-card">
        <div class="flex justify-between items-start">
            <div>
                <p class="stat-label">Usuarios Totales</p>
                <h3 class="stat-value">@ViewBag.TotalUsers</h3>
            </div>
            <div class="p-3 bg-blue-100 text-blue-600 rounded-lg">
                <i class="fas fa-users fa-lg"></i>
            </div>
        </div>
        <div class="mt-4 text-sm text-green-600">
            <i class="fas fa-arrow-up"></i> +12% vs mes anterior
        </div>
    </div>

    <div class="stat-card">
        <div class="flex justify-between items-start">
            <div>
                <p class="stat-label">Cursos Activos</p>
                <h3 class="stat-value">@ViewBag.ActiveCourses</h3>
            </div>
            <div class="p-3 bg-green-100 text-green-600 rounded-lg">
                <i class="fas fa-book-open fa-lg"></i>
            </div>
        </div>
        <div class="mt-4 text-sm text-gray-500">
            5 nuevos esta semana
        </div>
    </div>

    <div class="stat-card">
        <div class="flex justify-between items-start">
            <div>
                <p class="stat-label">Tasa Completado</p>
                <h3 class="stat-value">@ViewBag.CompletionRate</h3>
            </div>
            <div class="p-3 bg-purple-100 text-purple-600 rounded-lg">
                <i class="fas fa-chart-pie fa-lg"></i>
            </div>
        </div>
        <div class="mt-4 text-sm text-green-600">
            <i class="fas fa-arrow-up"></i> Objetivo cumplido
        </div>
    </div>

    <div class="stat-card">
        <div class="flex justify-between items-start">
            <div>
                <p class="stat-label">Pendientes</p>
                <h3 class="stat-value text-orange-500">@ViewBag.PendingApprovals</h3>
            </div>
            <div class="p-3 bg-orange-100 text-orange-600 rounded-lg">
                <i class="fas fa-clock fa-lg"></i>
            </div>
        </div>
        <div class="mt-4 text-sm text-orange-600 font-medium">
            Requiere atención
        </div>
    </div>
</div>

<!-- Main Content Grid -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Recent Activity -->
    <div class="card">
        <div class="flex justify-between items-center mb-6">
            <h3 class="card-header mb-0">Actividad Reciente</h3>
            <button class="text-sm text-blue-600 hover:underline">Ver todo</button>
        </div>
        <div class="space-y-4">
            <div class="flex items-center gap-4 p-3 hover:bg-gray-50 rounded-lg transition">
                <div class="h-10 w-10 rounded-full bg-blue-100 flex items-center justify-center text-blue-600">
                    <i class="fas fa-user-plus"></i>
                </div>
                <div>
                    <p class="text-sm font-medium text-gray-800">Nuevo usuario registrado</p>
                    <p class="text-xs text-gray-500">Hace 15 minutos • Juan Pérez</p>
                </div>
            </div>
            <div class="flex items-center gap-4 p-3 hover:bg-gray-50 rounded-lg transition">
                <div class="h-10 w-10 rounded-full bg-green-100 flex items-center justify-center text-green-600">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div>
                    <p class="text-sm font-medium text-gray-800">Curso completado</p>
                    <p class="text-xs text-gray-500">Hace 1 hora • María García - Seguridad Industrial</p>
                </div>
            </div>
            <div class="flex items-center gap-4 p-3 hover:bg-gray-50 rounded-lg transition">
                <div class="h-10 w-10 rounded-full bg-yellow-100 flex items-center justify-center text-yellow-600">
                    <i class="fas fa-file-alt"></i>
                </div>
                <div>
                    <p class="text-sm font-medium text-gray-800">Reporte generado</p>
                    <p class="text-xs text-gray-500">Hace 3 horas • Reporte Mensual RH</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="card">
        <h3 class="card-header">Acciones Rápidas</h3>
        <div class="grid grid-cols-2 gap-4">
            <a href="#" class="p-4 border rounded-xl hover:border-blue-500 hover:bg-blue-50 transition flex flex-col items-center text-center group">
                <div class="h-10 w-10 rounded-full bg-blue-100 text-blue-600 flex items-center justify-center mb-3 group-hover:scale-110 transition-transform">
                    <i class="fas fa-user-plus"></i>
                </div>
                <span class="text-sm font-medium text-gray-700">Agregar Usuario</span>
            </a>
            <a href="#" class="p-4 border rounded-xl hover:border-green-500 hover:bg-green-50 transition flex flex-col items-center text-center group">
                <div class="h-10 w-10 rounded-full bg-green-100 text-green-600 flex items-center justify-center mb-3 group-hover:scale-110 transition-transform">
                    <i class="fas fa-plus-circle"></i>
                </div>
                <span class="text-sm font-medium text-gray-700">Crear Curso</span>
            </a>
            <a href="#" class="p-4 border rounded-xl hover:border-purple-500 hover:bg-purple-50 transition flex flex-col items-center text-center group">
                <div class="h-10 w-10 rounded-full bg-purple-100 text-purple-600 flex items-center justify-center mb-3 group-hover:scale-110 transition-transform">
                    <i class="fas fa-file-download"></i>
                </div>
                <span class="text-sm font-medium text-gray-700">Exportar Data</span>
            </a>
            <a href="#" class="p-4 border rounded-xl hover:border-orange-500 hover:bg-orange-50 transition flex flex-col items-center text-center group">
                <div class="h-10 w-10 rounded-full bg-orange-100 text-orange-600 flex items-center justify-center mb-3 group-hover:scale-110 transition-transform">
                    <i class="fas fa-envelope"></i>
                </div>
                <span class="text-sm font-medium text-gray-700">Enviar Avisos</span>
            </a>
        </div>
    </div>
</div>
