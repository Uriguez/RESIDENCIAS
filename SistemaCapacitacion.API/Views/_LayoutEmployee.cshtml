<!doctype html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Griver</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/Empleado.css">
</head>
<body class="bg-light">
    <div class="d-flex">
        <aside class="border-end bg-white p-3" style="width:260px; min-height:100vh;">
            <div class="d-flex align-items-center gap-2 mb-3">
                <img src="~/img/griver-logo.png" height="28" alt="Griver" />
                <div class="fw-semibold">Griver</div>
            </div>
            <nav class="nav flex-column gap-1">
                <a class="nav-link" asp-controller="Empleado" asp-action="Inicio">Inicio</a>
                <a class="nav-link" asp-controller="MisCursos" asp-action="Index">Mis Cursos</a>
                <a class="nav-link" asp-controller="Progreso" asp-action="Index">Mi Progreso</a>
                <a class="nav-link" asp-controller="Certificados" asp-action="Index">Mis Certificados</a>
                <a class="nav-link" asp-controller="Help" asp-action="Index">Ayuda y Soporte</a>
            </nav>
            <div class="small text-muted mt-auto">Griver v2.0.0 · 2025</div>
        </aside>
        <main class="flex-grow-1 min-vh-100">
            <header class="bg-white border-bottom p-2 d-flex align-items-center justify-content-end">
                <span class="text-muted small me-2" id="clock2"></span>
                <button class="btn btn-sm btn-outline-secondary">🔔</button>
            </header>
            <div class="p-3 p-md-4">
                @RenderBody()
            </div>
        </main>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const t2=()=>document.getElementById('clock2').textContent=new Date().toLocaleTimeString('es-MX');
        t2(); setInterval(t2,1000);
    </script>
    @RenderSection("Scripts", false)
</body>
</html>
